@model NetCoreEcommerce.Web.Models.Product.NewProductModel

<div class="row">
    <h3 class="text-center" style="margin-bottom:32px;">Fill out the fields to @ViewBag.ActionText product</h3>
    <div class="col-md-offset-2 col-md-10">
        <div class="row orderForm ">
            
            <form asp-action="@ViewBag.Action" method="post" class="form-horizontal col-md-8" role="form">
                <div class="form-group">
                    <label asp-for="Name" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="ShortDescription" class="form-control" />
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LongDescription" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <textarea asp-for="LongDescription" class="form-control"></textarea>
                        <span asp-validation-for="LongDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <input onkeyup="readUrl(this, 'ProductImage');" asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InStock" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="InStock" class="form-control" />
                        <span asp-validation-for="InStock" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IsPreferedProduct" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        @Html.RadioButtonFor(model => model.IsPreferedProduct, "true") Yes
                        @Html.RadioButtonFor(model => model.IsPreferedProduct, "false") No
                        <span asp-validation-for="IsPreferedProduct" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Categories, " -- Select Category -- ")
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="btn-group col-md-4">
                        @if (ViewBag.RouteId == null || ViewBag.RouteId == 0)
                        {
                            <a class="btn btn-default" asp-action="@ViewBag.CancelAction" asp-controller="@ViewBag.ControllerName">Cancel</a>
                        }
                        else
                        {
                            <a class="btn btn-default" asp-action="@ViewBag.CancelAction" asp-controller="@ViewBag.ControllerName" asp-route-id="@ViewBag.RouteId">Cancel</a>
                        }
                    </div>
                    <div class="btn-group col-md-offset-4 col-md-4">
                        <input class="btn btn-success" type="submit" value="@ViewBag.SubmitText" />
                    </div>
                </div>
                @Html.Hidden("Id", Model.Id)
                @Html.HiddenFor(m=>m.Id)
            </form>
            <div class="col-md-4">
                <div >
                    <img id="ProductImage"  src= "@Url.Content(Model.ImageUrl)" alt="Invalid Url" width="300" heigth="300"/>
                </div>
            </div>
        </div>
    </div>
</div>
